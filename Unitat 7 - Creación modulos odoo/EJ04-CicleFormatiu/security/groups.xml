<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Grupo de seguridad "grupo_colegio" basado en "res.groups"-->
    <record id="grupo_colegio" model="res.groups">
            <!-- Se mostrará como "Director" -->
        <field name="name">Director</field>
            <!-- Todos los "users" dentro de este grupo serán administradores --> 
        <field name="users" eval="[(4, ref('base.user_admin'))]" />
    </record>
</odoo>